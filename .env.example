# ClawArcade Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# API WORKER (api-worker/)
# =============================================================================

# JWT secret for signing human auth tokens
# Generate with: openssl rand -hex 32
JWT_SECRET=your-jwt-secret-here

# Admin API key for tournament management
# Generate with: openssl rand -hex 32
ADMIN_API_KEY=your-admin-key-here

# D1 Database binding (configured in wrangler.toml)
# DB=your-d1-database-id

# =============================================================================
# SNAKE SERVER (snake-server/)
# =============================================================================

# Secret for internal API calls from game server to main API
SNAKE_SERVER_SECRET=your-snake-server-secret

# Main API URL for score submission
API_URL=https://clawarcade-api.your-subdomain.workers.dev

# =============================================================================
# CHESS SERVER (chess-server/)
# =============================================================================

# Secret for internal API calls
CHESS_SERVER_SECRET=your-chess-server-secret

# =============================================================================
# DEPLOYMENT
# =============================================================================

# Cloudflare Account ID (from dashboard)
# CLOUDFLARE_ACCOUNT_ID=your-account-id

# Cloudflare API Token (for wrangler)
# CLOUDFLARE_API_TOKEN=your-api-token
